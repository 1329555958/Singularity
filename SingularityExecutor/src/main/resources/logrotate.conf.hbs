dateext
compress
daily
copytruncate
nomail
nosharedscripts
rotate {{{ rotateCount }}}
maxage {{{ maxageDays }}}
notifempty

{{{ logfile }}} {
  dateformat {{{ rotateDateformat }}}
  olddir {{{ rotateDirectory }}}
  {{#if logfileExtension}}extension .{{{ logfileExtension }}}{{/if}}
}

{{#if extrasFiles}}
{{#each extrasFiles}}{{{this}}} {{/each}} {
  dateformat {{{ extrasDateformat }}}
  missingok
}
{{/if}}
