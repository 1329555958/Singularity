dateext
compress
daily
copytruncate
nomail
nosharedscripts
rotate {{{ rotateCount }}}
maxage {{{ maxageDays }}}
notifempty

{{{ logfile }}} {
  dateformat {{{ rotateDateformat }}}{{#if logfileExtension}}.{{{ logfileExtension}}}{{/if}}
  olddir {{{ rotateDirectory }}}
}

{{#if extrasFiles}}
{{#each extrasFiles}}{{{this}}} {{/each}} {
  dateformat {{{ extrasDateformat }}}
  missingok
}
{{/if}}
