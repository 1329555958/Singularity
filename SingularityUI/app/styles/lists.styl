@import colors

// Simple Lists
.list-plain
    list-style none
    padding-left 15px
    li
        margin-bottom 5px

// List of text in a panel
.panel--list
    .panel-title
        font-size 24px
    .panel-heading
        a
            text-decoration none
    .list-group
        margin-bottom 0
    .panel-body
        padding 0
        margin-bottom 0
    .list-group-item
        padding 10px 15px
        border none
        border-top 1px solid #dadada
        font-size 15px
        .badge
            margin-right 10px
            float left
        &:first-child
            border-top none

// List of links in a panel
.list-group--links
    border: none

    .list-group-item
        padding: 0
        a
            display block
            padding 10px 15px
            &:hover
                text-decoration none
                    
            &.inactive-link
                &:hover
                    background: inherit
                    color: $base-text
                    &:after
                        content ''
                
    .list-group--slim
        .list-group-item a
            padding: 5px 15px
            
.list-group--plain
    .list-group-item
        border: none
        a, li
            padding: 5px 15px

.inactive-link
    color $grey
    &:hover
        text-decoration none
        color $grey
        cursor default