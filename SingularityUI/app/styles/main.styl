@import nib

a
    cursor pointer

a.disabled
    cursor none
    pointer-events none
    color #999

a.disabled:hover
    background-color transparent

.link-spacer
    opacity 0.2
    padding 0px 5px

.subtle
    opacity 0.5

.ellipsis
    overflow ellipsis

.hard-wrap
    word-wrap break-word

tr.filtered
    display none

table.filtered
    display none

// Overrides

#nav-user-name
    cursor default

table th
    text-align left

#page
    padding-bottom: 40px