@import colors

.navbar

    .navbar-brand, #navigation-links .global-search-button
        color #bbb

// Red
body.env-color-red .navbar
  background-color $nav-red

  li.dropdown ul a
    color $base-text

  li a, .global-search-button span, .navbar-brand
    color $grey-xtra-light

    &:hover
      color $grey-medium

  .active > a,
  .open > a
    color $grey-xtra-light
    background-color $nav-red-dark

    &:hover
      color $grey-xtra-light
      background-color $nav-red-dark

