<div class="page-header">
    <h1>Dead racks</h1>
</div>
{{#if data.length}}
    <table class="table table-striped">
        <thead>
            <tr>
                <th>ID</th>
                <th>Died</th>
                <th>Uptime</th>
                <th data-sortable="false"></th>
            </tr>
        </thead>
        <tbody>
            {{#each data}}
                <tr>
                    <td>{{ id }}</td>
                    <td data-value="{{ deadAt }}">
                        {{timestampFormatted deadAt}}
                    </td>
                    <td data-value="{{ uptime }}">
                        {{timestampDuration uptime}}
                    </td>
                    <td class="actions-column">
                        <a data-rack-id="{{ id }}" data-action="remove">
                             <span class="glyphicon glyphicon-trash" title="Remove"></span>
                        </a>
                    </td>
                </tr>
            {{/each}}
        </tbody>
    </table>
{{else}}
    <div class="empty-table-message"><p>No dead racks</p></div>
{{/if}}
