{{#if data.length }}
    <h1>Active</h1>
    <table class="table table-striped">
        <thead>
            <tr>
                <th>ID</th>
                <th>Current State</th>
                <th>Uptime</th>
                <th data-sortable="false"></th>
            </tr>
        </thead>
        <tbody>
            {{#each data}}
                {{#ifInSubFilter state "ACTIVE" }}
                    <tr>
                        <td>{{ id }}</td>
                        <td>{{ state }}</td>
                        <td data-value="{{ uptime }}">{{timestampDuration uptime}}</td>
                        <td class="actions-column">
                            <a data-rack-id="{{ id }}" data-state="{{ state }}" data-action="remove" title="Decommission/Remove">
                                <span class="glyphicon glyphicon-remove"></span>
                            </a>
                        </td>
                    </tr>
                {{/ifInSubFilter}}
            {{/each}}
        </tbody>
    </table>
    <h1>Decommissioning</h1>
    <table class="table table-striped">
        <thead>
            <tr>
                <th>ID</th>
                <th>Current State</th>
                <th>Uptime</th>
                <th data-sortable="false"></th>
            </tr>
        </thead>
        <tbody>
            {{#each data}}
                {{#ifInSubFilter state "DECOMMISSIONING STARTING_DECOMMISSION DECOMMISSIONED" }}
                    <tr>
                        <td>{{ id }}</td>
                        <td>{{ state }}</td>
                        <td data-value="{{ uptime }}">{{timestampDuration uptime}}</td>
                        <td class="actions-column">
                            <a data-rack-id="{{ id }}" data-state="{{ state }}" data-action="remove" title="Decommission/Remove">
                                <span class="glyphicon glyphicon-remove"></span>
                            </a>
                        </td>
                    </tr>
                {{/ifInSubFilter}}
            {{/each}}
        </tbody>
    </table>

    <h1>Inactive</h1>
    <table class="table table-striped">
        <thead>
            <tr>
                <th>ID</th>
                <th>Current State</th>
                <th>Uptime</th>
                <th data-sortable="false"></th>
            </tr>
        </thead>
        <tbody>
            {{#each data}}
                {{#ifInSubFilter state "DEAD MISSING_ON_STARTUP" }}
                    <tr>
                        <td>{{ id }}</td>
                        <td>{{ state }}</td>
                        <td data-value="{{ uptime }}">{{timestampDuration uptime}}</td>
                        <td class="actions-column">
                            <a data-rack-id="{{ id }}" data-state="{{ state }}" data-action="remove" title="Decommission/Remove">
                                <span class="glyphicon glyphicon-remove"></span>
                            </a>
                        </td>
                    </tr>
                {{/ifInSubFilter}}
            {{/each}}
        </tbody>
    </table>

{{else}}
    <div class="empty-table-message"><p>No racks</p></div>
{{/if}}
