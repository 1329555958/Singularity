{{#unless rowsOnly}}
    {{#if haveRequests}}
        <table class="table table-striped">
            <thead>
                <tr>
                    <th data-sort-attribute="id">
                        ID
                    </th>
                    <th data-sort-attribute="user" class="visible-md">
                        User
                    </th>
                    <th data-sort-attribute="timestamp" class="hidden-xs">
                        Timestamp
                    </th>
                    <th data-sort-attribute="cleanupType" class="visible-md">
                        Cleaning Type
                    </th>
                </tr>
            </thead>
            <tbody>
    {{/if}}
{{/unless}}
            {{#eachWithFn requests}}
                <tr data-request-id="{{ id }}">
                    <td>
                        {{#hardBreak id}}{{/hardBreak}}
                    </td>
                    <td class="visible-md">
                        {{ user }}
                    </td>
                    <td class="hidden-xs" data-value="{{ timestamp }}">
                        {{ timestampHuman }}
                    </td>
                    <td class="visible-md">
                        {{ cleanupType }}
                    </td>
                </tr>
            {{/eachWithFn}}
{{#unless rowsOnly}}
    {{#if haveRequests}}
            </tbody>
        </table>
    {{else}}
        {{#if collectionSynced}}
            <div class="empty-table-message"><p>No cleaning requests</p></div>
        {{else}}
            <div class="page-loader centered cushy"></div>
        {{/if}}
    {{/if}}
{{/unless}}