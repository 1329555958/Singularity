{{#if data.length}}
    <h1>Active</h1>
    <table class="table table-striped">
        <thead>
            <tr>
                <th>ID</th>
                <th>State</th>
                <th>Rack</th>
                <th>Host</th>
                <th class="hidden-xs">Uptime</th>
                <th data-sortable="false"></th>
            </tr>
        </thead>
        <tbody>
            {{#each data}}
                {{#ifInSubFilter state "ACTIVE" }}
                    <tr>
                        <td>
                            <a href="{{appRoot}}/tasks/active/{{ host }}">{{ id }}</a>
                        </td>
                        <td>{{ state }}</td>
                        <td>{{ rackId }}</td>
                        <td>{{ host }}</td>
                        <td class="hidden-xs" data-value="{{ uptime }}">
                            {{timestampDuration uptime}}
                        </td>
                        <td class="actions-column">
                            <a data-slave-id="{{ id }}" data-state="{{ state }}" data-action="remove" title="Decommission/Remove">
                                <span class="glyphicon glyphicon-remove"></span>
                            </a>
                        </td>
                    </tr>
                {{/ifInSubFilter}}
            {{/each}}
        </tbody>
    </table>
    <h1>Decommissioning</h1>
    <table class="table table-striped">
        <thead>
            <tr>
                <th>ID</th>
                <th>State</th>
                <th>Rack</th>
                <th>Host</th>
                <th class="hidden-xs">Uptime</th>
                <th data-sortable="false"></th>
            </tr>
        </thead>
        <tbody>
            {{#each data}}
                {{#ifInSubFilter state "DECOMMISSIONING STARTING_DECOMMISSION DECOMMISSIONED" }}
                    <tr>
                        <td>
                            <a href="{{appRoot}}/tasks/active/{{ host }}">{{ id }}</a>
                        </td>
                        <td>{{ state }}</td>
                        <td>{{ rackId }}</td>
