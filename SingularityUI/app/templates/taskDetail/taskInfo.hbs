<div class="page-header">
    <h2>Info</h2>
</div>

<div class="row">
    <ul class="list-unstyled horizontal-description-list">
        {{#if data.task.name }}
            <li class="col-md-4">
                <div>
                    <h4>Task Name</h4>
                    <p>{{ data.task.name }}</p>
                </div>
            </li>
            {{/if}}
            {{#if data.task.mesosTask.executor.executorId.value }}
            <li class="col-md-4">
                <div>
                    <h4>Directory</h4>
                    <p>{{ data.directory }}</p>
                </div>
            </li>
        {{/if}}
        {{#if data.task.id }}
            <li class="col-md-4">
                <div>
                    <h4>Task ID</h4>
                    <p>{{ data.task.id }}</p>
                </div>
            </li>
        {{/if}}
        {{#if data.task.mesosTask.executor.executorId.value }}
            <li class="col-md-4">
                <div>
                    <h4>Executor GUID</h4>
                    <p>{{ data.task.mesosTask.executor.executorId.value }}</p>
                </div>
            </li>
        {{/if}}
        {{#if data.task.offer.hostname }}
            <li class="col-md-4">
                <div>
                    <h4>Hostname</h4>
                    <p>{{ data.task.offer.hostname }}</p>
                </div>
            </li>
        {{/if}}
        {{#if data.task.taskRequest.request.executorData.ports }}
            <li class="col-md-4">
                <div>
                    <h4>Task request ports</h4>
                    <p>{{ data.task.taskRequest.request.executorData.ports }}</p>
                </div>
            </li>
        {{/if}}
    </ul>
</div>
