<header class="jumbotron subhead" id="overview">
    <h1>Singularity</h1>
</header>

<section>
    <div class="page-header">
        <h1>Overview</h1>
    </div>
    <div class="row-fluid">
        <div class="span3">
            <div class="well">
                <div class="big-number">
                    <div class="number">{{ state.driverStatusHuman }}</div>
                    <div class="number-label">Driver Status</div>
                </div>
            </div>
        </div>
        <div class="span3">
            <div class="well">
                <div class="big-number">
                    <div class="number">{{ state.uptimeHuman }}</div>
                    <div class="number-label">Uptime</div>
                </div>
            </div>
        </div>
        <div class="span3">
            <div class="well">
                <a class="big-number-link" href="/singularity/webhooks" data-route="webhooks">
                    <div class="big-number">
                        <div class="number">{{ state.numWebhooks }}</div>
                        <div class="number-label">Webhooks</div>
                    </div>
                </a>
            </div>
        </div>
        <div class="span3">
            <div class="well">
                <div class="big-number">
                    <div class="number-label" style="color: inherit; line-height: 1.8em">{{ state.millisSinceLastOfferHuman }}</div>
                    <div class="number-label">since last offer</div>
                </div>
            </div>
        </div>
    </div>
</section>

