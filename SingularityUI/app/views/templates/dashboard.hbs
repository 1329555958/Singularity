<header class="jumbotron subhead" id="overview">
    <h1>Singularity</h1>
</header>

<section>
    <div class="page-header">
        <h1>Overview</h1>
    </div>
    <div class="row-fluid">
        <div class="span3">
            <div class="well">
                <span data-state-property="driverStatusHuman">Driver {{ state.driverStatusHuman }}</span>
            </div>
        </div>
        <div class="span3">
            <div class="well">
                Up for <span data-state-property="uptimeHuman">{{ state.uptimeHuman }}</span>
            </div>
        </div>
        <div class="span3">
            <div class="well">
                <span data-state-property="millisSinceLastOfferHuman">Time since last offer:<br/>{{ state.millisSinceLastOfferHuman }}</span>
            </div>
        </div>
        <div class="span3">
            <div class="well">
                <span data-state-property="numWebhooks">{{ state.numWebhooks }} Webhooks</span>
            </div>
        </div>
    </div>
</section>

<section>
    <div class="page-header">
        <h1>Requests</h1>
    </div>
    <div class="row-fluid">
        <div class="span4">
            <a class="big-number-link" href="/singularity/requests" data-route="requests">
                <div class="well">
                    <div class="big-number">
                        <div class="number" data-state-property="requests">{{ state.requests }}</div>
                        <div class="number-label">Active</div>
                    </div>
                </div>
            </a>
        </div>
        <div class="span4">
            <a class="big-number-link" href="/singularity/requests/pending" data-route="requests/pending">
                <div class="well">
                    <div class="big-number">
                        <div class="number" data-state-property="pendingRequests">{{ state.pendingRequests }}</div>
                        <div class="number-label">Pending</div>
                    </div>
                </div>
            </a>
        </div>
        <div class="span4">
            <a class="big-number-link" href="/singularity/requests/cleaning" data-route="requests/cleaning">
                <div class="well">
                    <div class="big-number">
                        <div class="number" data-state-property="cleaningRequests">{{ state.cleaningRequests }}</div>
                        <div class="number-label">Cleaning</div>
                    </div>
                </div>
            </a>
        </div>
    </div>
</section>

