<header class="jumbotron subhead" id="overview">
    <h1>Singularity</h1>
</header>

<section>
    <div class="page-header">
        <h1>Status Overview</h1>
    </div>
    <div class="row-fluid">
        <div class="span4">
            <div class="well">
                <h3>Up for <span data-state-property="uptimeHuman">{{ state.uptimeHuman }}</span> &nbsp;&nbsp;&nbsp;</h3>
            </div>
        </div>
        <div class="span4">
            <div class="well">
                <h3><span data-state-property="driverStatus">{{ state.driverStatus }}</span></h3>
            </div>
        </div>
        <div class="span4"></div>
    </div>
</section>

<section>
    <div class="page-header">
        <h1>Requests</h1>
    </div>
    <div class="row-fluid">
        <div class="span4">
            <a class="big-number-link" href="/singularity/requests" data-route="requests">
                <div class="well">
                    <div class="big-number">
                        <div class="number" data-state-property="requests">{{ state.requests }}</div>
                        <div class="number-label">Active</div>
                    </div>
                </div>
            </a>
        </div>
        <div class="span4">
            <a class="big-number-link" href="/singularity/requests/pending" data-route="requests/pending">
                <div class="well">
                    <div class="big-number">
                        <div class="number" data-state-property="pendingRequests">{{ state.pendingRequests }}</div>
                        <div class="number-label">Pending</div>
                    </div>
                </div>
            </a>
        </div>
        <div class="span4">
            <a class="big-number-link" href="/singularity/requests/cleaning" data-route="requests/cleaning">
                <div class="well">
                    <div class="big-number">
                        <div class="number" data-state-property="cleaningRequests">{{ state.cleaningRequests }}</div>
                        <div class="number-label">Cleaning</div>
                    </div>
                </div>
            </a>
        </div>
    </div>
</section>

<section>
    <div class="page-header">
        <h1>Tasks</h1>
    </div>
    <div class="row-fluid">
        <div class="span4">
            <a class="big-number-link" href="/singularity/tasks" data-route="tasks">
                <div class="well">
                    <div class="big-number">
                        <div class="number" data-state-property="activeTasks">{{ state.activeTasks }}</div>
                        <div class="number-label">Active</div>
                    </div>
                </div>
            </a>
        </div>
        <div class="span4">
            <a class="big-number-link" href="/singularity/tasks/scheduled" data-route="tasks/scheduled">
                <div class="well">
                    <div class="big-number">
                        <div class="number" data-state-property="scheduledTasks">{{ state.scheduledTasks }}</div>
                        <div class="number-label">Scheduled</div>
                    </div>
                </div>
            </a>
        </div>
        <div class="span4"></div>
    </div>
</section>