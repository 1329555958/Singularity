<header class="jumbotron subhead" id="overview">
    {{#if deployUser}}
        <h1>{{ deployUser }} <small><a data-action="change-user">change</a></small></h1>
    {{else}}
        <h1>Singularity</h1>
    {{/if}}
</header>

{{#if collectionSynced}}
    {{#if deployUser}}
        <section>
            <div class="page-header">
                <h1>My requests</h1>
            </div>
            <div class="row-fluid">
                <div class="span3">
                    <a class="big-number-link" href="{{#appRoot}}{{/appRoot}}/requests/active/all/{{ deployUser }}" data-requests-active-filter="all">
                        <div class="well">
                            <div class="big-number">
                                <div class="number" data-state-attribute="requests">
                                    {{ userRequestTotals.all }}
                                </div>
                                <div class="number-label">total</div>
                            </div>
                        </div>
                    </a>
                </div>
                <div class="span3">
                    <a class="big-number-link" href="{{#appRoot}}{{/appRoot}}/requests/active/daemon/{{ deployUser }}" data-requests-active-filter="daemon">
                        <div class="well">
                            <div class="big-number">
                                <div class="number" data-state-attribute="requests">
                                    {{ userRequestTotals.daemon }}
                                </div>
                                <div class="number-label">daemon</div>
                            </div>
                        </div>
                    </a>
                </div>
                <div class="span3">
                    <a class="big-number-link" href="{{#appRoot}}{{/appRoot}}/requests/active/on-demand/{{ deployUser }}" data-requests-active-filter="on-demand">
                        <div class="well">
                            <div class="big-number">
                                <div class="number" data-state-attribute="requests">
                                    {{ userRequestTotals.onDemand }}
                                </div>
                                <div class="number-label">on-demand</div>
                            </div>
                        </div>
                    </a>
                </div>
                <div class="span3">
                    <a class="big-number-link" href="{{#appRoot}}{{/appRoot}}/requests/active/scheduled/{{ deployUser }}" data-requests-active-filter="scheduled">
                        <div class="well">
                            <div class="big-number">
                                <div class="number" data-state-attribute="requests">
                                    {{ userRequestTotals.scheduled }}
                                </div>
                                <div class="number-label">scheduled</div>
                            </div>
                        </div>
                    </a>
                </div>
            </div>
        </section>
    {{/if}}

    <section>
        <div class="page-header">
            <h1>Starred requests</h1>
        </div>
    </section>

    <section>
        <div class="row-fluid">
            {{#if starredRequests.length}}
                <table class="table" data-sortable>
                    <thead>
                        <tr>
                            <th data-sortable="false"></th>
                            <th>Request</th>
                            <th class="hidden-phone">Requested</th>
                            <th class="visible-desktop">Deploy user</th>
                            <th class="visible-large-desktop">Instances</th>
                        </tr>
                    </thead>
                    <tbody>
                        {{#eachWithFn starredRequests}}
                            <tr data-request-id="{{ id }}">
                                <td><a class="star" data-request-id="{{ id }}" data-request-name="{{ name }}" data-action="unstar" data-starred="true">â˜…</a></td>
                                <td><span title="{{ id }}"><a href="{{#appRoot}}{{/appRoot}}/request/{{ id }}">{{#hardBreak id}}{{/hardBreak}}</a></span></td>
                                <td class="hidden-phone" data-value="{{ timestamp }}"><span title="{{ timestamp }}">{{ timestampHuman }}</span></td>
                                <td class="visible-desktop">{{ deployUser }}</td>
                                <td class="visible-large-desktop">{{ instances }}</td>
                            </tr>
                        {{/eachWithFn}}
                    </tbody>
                </table>
            {{else}}
                <div class="empty-table-message"><p>No starred requests</p></div>
            {{/if}}
        </div>
    </section>
{{else}}
    <div class="page-loader centered cushy"></div>
{{/if}}