<header class="jumbotron subhead" id="overview">
    <h1>{{#hardBreak request.name}}{{/hardBreak}}</h1>
    <h2>{{#hardBreak request.id}}{{/hardBreak}}</h2>
</header>

<section>
    <div class="page-header">
        <h1>Tasks</h1>
    </div>
    {{#if requestTasks}}
        <div class="row-fluid">
            <div class="span12">
                <table class="table">
                    <thead>
                        <tr>
                            <th>Name</th>
                            <th>Status</th>
                            <th>Created</th>
                            <th>Updated</th>
                            <th>JSON</th>
                        </tr>
                    </thead>
                    <tbody>
                        {{#eachWithFn requestTasks}}
                            <tr data-task-id="{{ id }}">
                                <td><span title="{{ id }}"><a href="/singularity/task/{{ id }}" data-route="task/{{ id }}">{{#hardBreak name}}{{/hardBreak}}</a></span></td>
                                <td><span>{{ lastStatus }}</span></td>
                                <td data-value="{{ createdAt }}"><span>{{ createdAtHuman }}</span></td>
                                <td data-value="{{ updatedAt }}"><span>{{ updatedAtHuman }}</span></td>
                                <td><span><a data-task-id="{{ id }}" class="dont-route view-json">JSON</a></span></td>
                            </tr>
                        {{/eachWithFn}}
                    </tbody>
                </table>
            </div>
        </div>
    {{else}}
        <div class="page-loader centered"></div>
    {{/if}}
    <div class="page-header">
        <h1>JSON</h1>
    </div>
    <div class="row-fluid">
        <div class="span12">
            <pre>{{ request.JSONString }}</pre>
        </div>
    </div>
</section>