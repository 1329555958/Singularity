<header class="jumbotron subhead" id="overview" data-request-header>
    {{> requestHeader}}
</header>

<p class="alert alert-warning hide" id="pending-alert">Request is currently in the pending queue</p>
<p class="alert alert-warning hide" id="cleaning-alert">Request is currently in the cleanup queue</p>

<div data-request-active-deploy>
    {{> requestActiveDeploy}}
</div>

<section>
    <div class="page-header">
        <h1>Active tasks</h1>
    </div>
    <div data-request-tasks-active-table-container>
        {{> requestTasksActiveTable}}
    </div>
</section>

<section>
    <div class="page-header">
        <h1>Scheduled tasks</h1>
    </div>
    <div data-request-tasks-scheduled-table-container>
        {{> requestTasksScheduledTable}}
    </div>
</section>

<section>
    <div class="page-header">
        <h1>Historical tasks &nbsp;<small><a href="{{#appRoot}}{{/appRoot}}/request/{{ request.id }}/historical-tasks">view more at once</a></small></h1>
    </div>
    <div class="row-fluid">
        <div class="span12">
            <div class="historical-tasks-paginated"></div>
        </div>
    </div>
</section>

<section>
    <div class="page-header">
        <h1>Info</h1>
    </div>
    <div data-request-info>
    </div>
</section>

<section>
    <div class="page-header">
        <h1>Deploy history &nbsp;<small><a href="{{#appRoot}}{{/appRoot}}/request/{{ request.id }}/deploy-history">view more at once</a></small></h1>
    </div>
    <div class="row-fluid">
        <div class="span12">
            <div class="deploy-history-paginated"></div>
        </div>
    </div>
</section>

<section>
    <div class="page-header">
        <h1>Request History &nbsp;<small><a href="{{#appRoot}}{{/appRoot}}/request/{{ request.id }}/request-history">view more at once</a></small></h1>
    </div>
    <div class="row-fluid">
        <div class="span12">
            <div class="history-paginated"></div>
        </div>
    </div>
</section>
