<section>
    {{#if fetchDoneRequestActiveDeploy}}
        <div>
            <div class="row-fluid">
                <div class="span3">
                    <div class="well">
                        <div class="big-number">
                            <h3 style="margin-bottom: 5px">Last deploy</h3>
                            <p>{{ requestActiveDeploy.deployResult.deployStateHuman }} {{ requestActiveDeploy.deployResult.timestampHuman }}</p>
                        </div>
                    </div>
                </div>
                <div class="span3">
                    <div class="well">
                        <div class="big-number">
                            <div class="number" data-state-attribute="requests">
                                {{ requestActiveDeploy.deployStatistics.numSuccess }}
                            </div>
                            <div class="number-label">successful deploys</div>
                        </div>
                    </div>
                </div>
                <div class="span3">
                    <div class="well">
                        <div class="big-number">
                            <div class="number" data-state-attribute="requests">
                                {{ requestActiveDeploy.deployStatistics.numFailures }}
                            </div>
                            <div class="number-label">failed deploys</div>
                        </div>
                    </div>
                </div>
                <div class="span3">
                    <div class="well">
                        <div class="big-number">
                            <div class="number" data-state-attribute="requests">
                                {{ requestActiveDeploy.deployStatistics.numSequentialRetries }}
                            </div>
                            <div class="number-label">retries</div>
                        </div>
                    </div>
                </div>
            </div>
        </div>
    {{else}}
        <div class="page-loader centered cushy"></div>
    {{/if}}
</section>