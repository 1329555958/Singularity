</header>

<section>
    <div class="row-fluid">
        <div class="span12">
            <ul class="nav nav-pills">
                <li class="active">
                    <a href="{{#appRoot}}{{/appRoot}}/requests">Active</a>
                </li>
                <li>
                    <a href="{{#appRoot}}{{/appRoot}}/requests/paused">Paused</a>
                </li>
