{{#unless rowsOnly}}
<section>
    <div class="row-fluid">
        <div class="span12">
            {{#if haveRequests}}
                <table class="table" data-sortable>
                    <thead>
                        <tr>
                            <th data-sort-attribute="name">Name</th>
                            <th data-sort-attribute="timestamp" class="hidden-phone">Requested</th>
                            <th data-sort-attribute="deployUser" class="visible-desktop">Deploy user</th>
                            <th data-sort-attribute="instances" class="visible-desktop">Instances</th>

                            {{#ifEqual requestsSubFilter "daemon"}}{{else}}
                            {{#ifEqual requestsSubFilter "on-demand"}}{{else}}
                            {{#ifEqual requestsSubFilter "daemon-on-demand"}}{{else}}
                                <th data-sort-attribute="schedule" class="visible-large-desktop">Schedule</th>
                            {{/ifEqual}}{{/ifEqual}}{{/ifEqual}}

                            <th class="hidden-phone"></th>
                        </tr>
                    </thead>
                    <tbody>
            {{/if}}
{{/unless}}
                        {{#eachWithFn requests}}
                            <tr data-request-id="{{ id }}" data-request-deploy-user="{{ deployUser }}">
                                <td><span title="{{ id }}"><a href="{{#appRoot}}{{/appRoot}}/request/{{ id }}">{{#hardBreak name}}{{/hardBreak}}</a></span></td>
                                <td class="hidden-phone" data-value="{{ timestamp }}"><span title="{{ timestamp }}">{{ timestampHuman }}</span></td>
                                <td class="visible-desktop">{{ deployUser }}</td>
                                <td class="visible-desktop">{{ instances }}</td>

                                {{#ifEqual requestsSubFilter "daemon"}}{{else}}
                                {{#ifEqual requestsSubFilter "on-demand"}}{{else}}
                                {{#ifEqual requestsSubFilter "daemon-on-demand"}}{{else}}
                                    <td class="visible-large-desktop">{{ schedule }}</td>
                                {{/ifEqual}}{{/ifEqual}}{{/ifEqual}}

                                <td class="actions-column hidden-phone">
                                    {{#if onDemand}}
                                        <a data-request-id="{{ id }}" data-request-type="on-demand" data-action="run-now">Run now</a>
                                    {{/if}}
                                    {{#if scheduled}}
                                        <a data-request-id="{{ id }}" data-request-type="scheduled" data-action="run-now">Run now</a>
                                    {{/if}}
                                    <a data-request-id="{{ id }}" data-action="viewJSON">JSON</a>
                                    <a data-request-id="{{ id }}" data-action="remove" data-action-remove-type="deletePaused">Remove</a>
                                </td>
                            </tr>
                        {{/eachWithFn}}
{{#unless rowsOnly}}
            {{#if haveRequests}}
                    </tbody>
                </table>
            {{else}}
                {{#if collectionSynced}}
                    <div class="empty-table-message"><p>No requests on cooldown</p></div>
                {{else}}
                    <div class="page-loader centered"></div>
                {{/if}}
            {{/if}}
        </div>
    </div>
</section>
{{/unless}}