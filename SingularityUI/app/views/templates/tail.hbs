	<div class="tail-indicator-container">
		<div class="tail-indicator">
		    <div class="page-loader small centered"></div>
		</div>
	</div>
	
	<div class="tail-button-container">	
		<a class="tail-bottom-button">To bottom</a>
		<a class="tail-top-button">To top</a>
	</div>
</div>