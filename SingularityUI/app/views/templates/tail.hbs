<header class="jumbotron subhead" id="overview">
    <h3><a href="{{#appRoot}}{{/appRoot}}/task/{{ taskId }}">{{#hardBreak taskId}}{{/hardBreak}}</a></h3>
    <h1><a href="{{#appRoot}}{{/appRoot}}/task/{{ taskId }}/files/">...</a>/{{#each subfolders}}<a href="{{#appRoot}}{{/appRoot}}/task/{{ ../taskId }}/files/{{ fullPath }}">{{name}}</a>/{{/each}}{{#hardBreak filename }}{{/hardBreak}}</h1>
</header>

<div class="tail-outer">
    <div class="tail-container"></div>
    <div class="tail-loader">
        <div class="page-loader fixed"></div>
    </div>
</div>

