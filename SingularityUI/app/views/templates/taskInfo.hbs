<section data-task-info>
    <div class="page-header">
        <h1>Info</h1>
    </div>
    <ul class="row-fluid horizontal-description-list">
        {{#if taskHistory.task.name }}
            <li class="span4">
                <div>
                    <h4>Task Name</h4>
                    <p>{{ taskHistory.task.name }}</p>
                </div>
            </li>
            {{/if}}
            {{#if taskHistory.task.mesosTask.executor.executorId.value }}
            <li class="span4">
                <div>
                    <h4>Directory</h4>
                    <p>{{ taskHistory.directory }}</p>
                </div>
            </li>
        {{/if}}
        {{#if taskHistory.task.id }}
            <li class="span4">
                <div>
                    <h4>Task ID</h4>
                    <p>{{ taskHistory.task.id }}</p>
                </div>
            </li>
        {{/if}}
        {{#if taskHistory.task.mesosTask.executor.executorId.value }}
            <li class="span4">
                <div>
                    <h4>Executor GUID</h4>
                    <p>{{ taskHistory.task.mesosTask.executor.executorId.value }}</p>
                </div>
            </li>
        {{/if}}
        {{#if taskHistory.task.offer.hostname }}
            <li class="span4">
                <div>
                    <h4>Hostname</h4>
                    <p>{{ taskHistory.task.offer.hostname }}</p>
                </div>
            </li>
        {{/if}}
        {{#if taskHistory.task.taskRequest.request.executorData.ports }}
            <li class="span4">
                <div>
                    <h4>Task request ports</h4>
                    <p>{{ taskHistory.task.taskRequest.request.executorData.ports }}</p>
                </div>
            </li>
        {{/if}}
    </ul>
</section>
