<header class="jumbotron subhead" id="overview">
    <h1>Tasks</h1>
</header>

<section>
    <input type="search" placeholder="Search tasks..." required />
    <div class="row-fluid">
        <div class="span12">
            <h2>Active Tasks</h2>
            <table class="table">
                <thead>
                    <tr>
                        <th>Name</th>
                        <th>Started</th>
                        <th>Host</th>
                        <th>CPUs</th>
                        <th>Memory</th>
                        <th>JSON</th>
                    </tr>
                </thead>
                <tbody>
                    {{#eachWithFn tasksActive}}
                        <tr data-task-id="{{ id }}">
                            <td><span><a class="simptip-position-top simptip-movable" data-tooltip="{{ id }}" href="singularity/task/{{ id }}" data-route="task/{{ id }}">{{#hardBreak name}}{{/hardBreak}}</span></a></td>
                            <td><span class="ellipsis simptip-position-top simptip-movable" data-tooltip="{{ startedAt }}">{{ startedAtHuman }}</span></td>
                            <td><span>{{ host }}</span></td>
                            <td><span>{{ resources.cpus }}</span></td>
                            <td><span>{{ resources.memoryMb }}Mb</span></td>
                            <td><span><a data-task-id="{{ id }}" class="dont-route view-json">JSON</a></span><td>
                        </tr>
                    {{/eachWithFn}}
                </tbody>
            </table>
        </div>
    </div>
    <div class="row-fluid">
        <div class="span12">
            <h2>Scheduled Tasks</h2>
            <table class="table">
                <thead>
                    <tr>
                        <th>Name</th>
                        <th>Scheduled</th>
                        <th>JSON</th>
                    </tr>
                </thead>
                <tbody>
                    {{#eachWithFn tasksScheduled}}
                        <tr data-task-id="{{ id }}">
                            <td><span class="simptip-position-top simptip-movable" data-tooltip="{{ id }}">{{#hardBreak name}}{{/hardBreak}}</span></td>
                            <td><span class="ellipsis simptip-position-top simptip-movable" data-tooltip="{{ nextRunAt }}">{{ nextRunAtHuman }}</span></td>
                            <td><span><a data-task-id="{{ id }}" class="dont-route view-json">JSON</a></span><td>
                        </tr>
                    {{/eachWithFn}}
                </tbody>
            </table>
        </div>
    </div>
</section>