{{#unless rowsOnly}}
    {{#if haveTasks}}
        <table class="table" data-sortable>
            <thead>
                <tr>
                    <th data-sort-attribute="name">Name</th>
                    <th data-sort-attribute="nextRunAt" class="visible-desktop">Next run</th>
                    <th data-sortable="false"></th>
                </tr>
            </thead>
            <tbody>
    {{/if}}
{{/unless}}
            {{#eachWithFn tasks}}
                <tr data-task-id="{{ id }}">
                    <td><span title="{{ id }}">{{#hardBreak name}}{{/hardBreak}}</span></td>
                    <td class="visible-desktop" data-value="{{ nextRunAt }}"><span title="{{ nextRunAt }}">{{ nextRunAtHuman }}</span></td>
                    <td class="actions-column">
                        <a data-task-id="{{ id }}" data-action="viewJSON">JSON</a>
                        <a data-task-id="{{ id }}" data-action="run-now">Run now</a>
                    </td>
                </tr>
            {{/eachWithFn}}
{{#unless rowsOnly}}
    {{#if haveTasks}}
        </tbody>
    </table>
    {{else}}
        {{#if collectionSynced}}
            <div class="empty-table-message"><p>No scheduled tasks</p></div>
        {{else}}
            <div class="page-loader centered cushy"></div>
        {{/if}}
    {{/if}}
{{/unless}}